<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Desc"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/amt_spent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/desc"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Amount spent"
                android:textAlignment="textEnd"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amt_spent"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Date"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Category:"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_toRightOf="@+id/c"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Value"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Expense by:"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/expense_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category"
                android:layout_toRightOf="@+id/e"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Value"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expense_by"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Share by: "
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/share_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expense_by"
                android:layout_toRightOf="@+id/s"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Value"
                android:textColor="#000"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expense_by"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@drawable/ic_more" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>