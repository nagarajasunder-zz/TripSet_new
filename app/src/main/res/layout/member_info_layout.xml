<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff1e1">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#4A73E4">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/ic_remove" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_bg"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="10dp"
            android:text="N"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="25dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_layout"
        android:background="#4A73E4"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/spent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:text="Spent Amount"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/share_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-1dp"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:text="Share By amount"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/due"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_by"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:text="Due/Refund amount"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/due"
        android:background="#EA5353"
        android:text="Delete"
        android:textSize="15dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#fff"/>

</RelativeLayout>